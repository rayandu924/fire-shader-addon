      "min": 0.0,
      "max": 1.0,
      "step": 0.05
    },
    "scale": {
      "type": "range",
      "label": "Échelle du Motif",
      "description": "Taille des détails du feu (plus petit = plus de détails)",
      "default": 7.0,
      "min": 1.0,
      "max": 15.0,
      "step": 0.5
