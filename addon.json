    "height": {
      "type": "range",
      "label": "Hauteur du Feu",
      "description": "Contrôle la taille verticale des flammes",
      "default": 1.0,
      "min": 0.3,
      "max": 3.0,
      "step": 0.1
    },
    "opacity": {
      "type": "range",
      "label": "Opacité",
      "description": "Transparence globale de l'effet",
      "default": 1.0,
      "min": 0.0,
      "max": 1.0,
      "step": 0.05
    }
