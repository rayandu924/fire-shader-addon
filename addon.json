    },
    "secondaryColor": {
      "type": "color", 
      "label": "Couleur Secondaire",
      "description": "Couleur secondaire du feu (rouge foncé)",
      "default": "#FF0000"
    },
    "intensity": {
      "type": "range",
      "label": "Intensité du Feu",
      "description": "Contrôle l'intensité générale de l'effet de feu",
      "default": 0.9,
      "min": 0.0,
      "max": 2.0,
      "step": 0.1
    },
    "speed": {
      "type": "range",
      "label": "Vitesse d'Animation",
      "description": "Vitesse de mouvement des flammes",
